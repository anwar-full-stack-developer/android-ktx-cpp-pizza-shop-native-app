<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="2"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".PizzaEditFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:textSize="20dp"
        android:text="Title:" />

    <EditText
        android:id="@+id/editPizzaTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_weight="1"
        android:hint="Title"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:textSize="20dp"
        android:text="Status: " />

    <EditText
        android:id="@+id/editPizzaStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_weight="1"
        android:textSize="20dp"
        android:hint="Status"
        android:inputType="text"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:textSize="20dp"
        android:text="Details: " />

    <EditText
        android:id="@+id/editPizzaDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="7"
        android:hint="Details"
        android:layout_weight="1"
        android:textSize="20dp"
        android:inputType="textMultiLine"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="8"
        android:layout_column="0"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="9"
        android:textSize="20dp"
        android:text="Price: " />

    <EditText
        android:id="@+id/editPizzaPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="10"
        android:hint="Price"

        android:layout_weight="1"
        android:textSize="20dp"
        android:inputType="number"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="11"
        android:layout_column="0"
        android:layout_weight="1"
        android:background="?android:attr/listDivider" />

    <Button
        android:id="@+id/editPizzaSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="12"
        android:layout_column="0"
        android:text="Save" />

    <Button
        android:id="@+id/editPizzaCancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="12"
        android:layout_column="0"
        android:layout_marginLeft="100dp"
        android:text="Cancel" />

</GridLayout>